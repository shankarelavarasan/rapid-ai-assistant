# Production Environment Configuration for Rapid AI Store
# Copy this to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=10000

# AI Services
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration
DATABASE_URL=your-production-database-url
REDIS_URL=your-redis-url

# Payment Processing
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret

# Cloud Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# CDN Configuration
CLOUDFLARE_API_TOKEN=your-cloudflare-token
CLOUDFLARE_ZONE_ID=your-zone-id

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key

# External Services
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Email Service
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@rapidai.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
CORS_ORIGINS=https://shankarelavarasan.github.io,https://shankarelavarasan.github.io/rapid-saas-ai-store

# Feature Flags
ENABLE_AI_ASSET_GENERATION=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_GLOBAL_SCALING=true
ENABLE_FRAUD_DETECTION=true

# Performance
MAX_FILE_SIZE=50MB
MAX_CONCURRENT_UPLOADS=10
CACHE_TTL=3600

# Logging
LOG_LEVEL=info
LOG_FORMAT=json